generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gasto {
  id            Int                @id @default(autoincrement())
  usuarioId     String
  gasto         Float
  montoAnterior Float
  fecha         DateTime
  categoriaId   Int?
  categoria     CategoriasDefault? @relation(fields: [categoriaId], references: [id])
}

model Ingreso {
  id            Int      @id @default(autoincrement())
  usuarioId     String
  ingreso       Decimal
  montoAnterior Float
  fecha         DateTime
}

model CategoriasDefault {
  id          Int     @id @default(autoincrement())
  categoria   String
  icono       String
  color       String
  descripcion String
  gastos      Gasto[]
}

model customCategories {
  id          Int    @id @default(autoincrement())
  usuarioId   String
  categoria   String
  icono       String
  color       String
  descripcion String
}
